<%= form_for @event do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br/>
  <%= f.label :location %>
  <%= f.text_area :location %>
  <br/>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/>
  <%= f.label :capacity %>
  <%= f.text_field :capacity %>
  <br/>
  <%= f.label :requires_id, 'Requires ID' %>
  <%= f.select(:requires_id, [['Yes', true], ['No', false]]) %>
  <br/>
  <%= f.submit "Create New Event" %>
<% end %>
